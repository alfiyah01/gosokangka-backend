{
  "name": "gosok-angka-backend",
  "version": "4.1.0",
  "description": "Gosok Angka Hoki Backend API - Complete with Bank Account & Token Management",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build step required for Node.js backend'",
    "postinstall": "echo 'Dependencies installed successfully'",
    "health": "node -e \"console.log('Backend health check OK')\"",
    "logs": "pm2 logs gosok-angka --lines 100",
    "restart": "pm2 restart gosok-angka",
    "deploy": "git pull && npm install && pm2 restart gosok-angka"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-node": "^4.1.0",
    "prettier": "^3.0.3",
    "@types/node": "^20.8.10",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "gosok-angka",
    "scratch-card",
    "gambling",
    "nodejs",
    "express",
    "mongodb",
    "socket.io",
    "lottery",
    "backend-api",
    "token-management",
    "bank-account"
  ],
  "author": {
    "name": "Gosok Angka Team",
    "email": "admin@gosokangka.com",
    "url": "https://gosokangkahoki.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/gosok-angka-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/gosok-angka-backend/issues"
  },
  "homepage": "https://gosokangkahoki.com",
  "private": true,
  "config": {
    "mongodbMemoryServer": {
      "version": "latest"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "node"],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  },
  "nodemonConfig": {
    "watch": ["server.js", "routes/", "models/", "middleware/"],
    "ext": "js,json",
    "ignore": ["node_modules/", "tests/", "coverage/"],
    "delay": "1000"
  }
}
