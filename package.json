{
  "name": "gosok-angka-backend-enhanced",
  "version": "5.0.0",
  "description": "Gosok Angka Hoki Backend API - Production Ready with Enhanced Security, Validation & Monitoring",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "build": "echo 'No build step required for Node.js backend'",
    "postinstall": "echo 'Dependencies installed successfully - Production Ready v5.0.0'",
    "health": "node scripts/health-check.js",
    "health:full": "node scripts/health-check.js --full",
    "logs": "pm2 logs gosok-angka --lines 100",
    "logs:error": "tail -f logs/error.log",
    "logs:combined": "tail -f logs/combined.log",
    "restart": "pm2 restart gosok-angka",
    "deploy": "git pull && npm install && npm run test && pm2 restart gosok-angka",
    "deploy:production": "git pull && npm install --production && npm run health && pm2 restart gosok-angka",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "db:indexes": "node scripts/create-indexes.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "monitoring:start": "node scripts/monitoring.js",
    "backup": "node scripts/backup.js",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "joi": "^17.11.0",
    "sharp": "^0.32.6",
    "redis": "^4.6.10",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-prometheus-middleware": "^1.2.0",
    "prom-client": "^15.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.0.3",
    "@types/node": "^20.8.10",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "mongodb-memory-server": "^9.1.1",
    "nock": "^13.4.0",
    "faker": "^6.6.6",
    "@faker-js/faker": "^8.3.1",
    "artillery": "^2.0.3",
    "nyc": "^15.1.0",
    "jsdoc": "^4.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "gosok-angka",
    "scratch-card",
    "gambling",
    "nodejs",
    "express",
    "mongodb",
    "socket.io",
    "lottery",
    "backend-api",
    "token-management",
    "bank-account",
    "production-ready",
    "security-enhanced",
    "rate-limiting",
    "input-validation",
    "audit-logging",
    "monitoring",
    "winston-logger"
  ],
  "author": {
    "name": "Gosok Angka Team",
    "email": "admin@gosokangka.com",
    "url": "https://gosokangkahoki.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/gosok-angka-backend-enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/gosok-angka-backend-enhanced/issues"
  },
  "homepage": "https://gosokangkahoki.com",
  "private": true,
  "config": {
    "mongodbMemoryServer": {
      "version": "latest"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 10000,
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!jest.config.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "consistent-return": "off",
      "no-param-reassign": ["error", { "props": false }],
      "import/no-dynamic-require": "off",
      "func-names": "off",
      "prefer-arrow-callback": "off",
      "no-underscore-dangle": ["error", { "allow": ["_id", "__dirname", "__filename"] }],
      "max-len": ["error", { "code": 120, "ignoreComments": true }],
      "security/detect-object-injection": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "nodemonConfig": {
    "watch": ["server.js", "routes/", "models/", "middleware/", "scripts/"],
    "ext": "js,json",
    "ignore": ["node_modules/", "tests/", "coverage/", "logs/"],
    "delay": "1000",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "include": [
      "server.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "check-coverage": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 70
  },
  "security": {
    "advisories": {
      "ignore": []
    }
  },
  "performance": {
    "budget": {
      "maxBundleSize": "10MB",
      "maxDependencyCount": 50
    }
  }
